{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "../dist-server", // указать, куда компилировать файлы
    "baseUrl": ".", // для правильного импорта
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["*"],
  "exclude": ["node_modules"]
}
